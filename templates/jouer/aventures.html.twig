{% extends 'base.html.twig' %}

{% block title %}Liste des aventures{% endblock %}

{% block body %}
<style>
    a { width: 200px; }
</style>

<div id="enligne" class="d-flex flex-row justify-content-around align-items-center">
    <div class="card" class="p-2" style="width: 18rem;">
        <img src="{{ asset('images/avatars/' ~ personnage.avatar.getNomFichier(personnage.id)) }}">
        <div class="card-body">
            <h5 class="card-title">Vous avez sélectionné le personnage : {{ personnage.prenom }} {{ personnage.nom }}</h5>
        </div>
    </div>
    {% for aventure in aventures %}
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">{{ aventure.titre }}</h5>
            <p>{{aventure.description}}</p>
            <a href="{{ path('app_start_aventure', {'idPersonnage': personnage.id, 'idAventure': aventure.id }) }}" class="btn btn-primary btn-lg">Jouer</a>
        </div>
    </div>
    {% else %}
    Aucune aventure
    {% endfor %}
</div> 
<h1>Liste des aventures</h1>   
{% endblock %}
